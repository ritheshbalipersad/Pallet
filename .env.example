# SQL Server â€“ use same server as in SSMS
MSSQL_SERVER=localhost
MSSQL_DATABASE=PalletDB
# Windows Authentication (Trusted Connection). When true, no MSSQL_USER/MSSQL_PASSWORD needed. Works with connection string: Server=localhost;Database=PalletDB;Trusted_Connection=True;
MSSQL_TRUSTED_CONNECTION=true
# If you use a named instance (e.g. in SSMS: .\SQLEXPRESS), set this and ensure SQL Server Browser service is running. Leave empty for default instance (port 1433).
# MSSQL_INSTANCE=SQLEXPRESS
MSSQL_PORT=1433
MSSQL_TRUST_SERVER_CERTIFICATE=true
MSSQL_ENCRYPT=false
# If Trusted Connection fails, try: MSSQL_ODBC_DRIVER=ODBC Driver 17 for SQL Server (install from Microsoft)
# SQL Server Authentication (only when MSSQL_TRUSTED_CONNECTION is false):
# MSSQL_USER=
# MSSQL_PASSWORD=

# Redis (BullMQ)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Optional: Azure AD SSO
# AZURE_AD_CLIENT_ID=
# AZURE_AD_TENANT_ID=
# AZURE_AD_CLIENT_SECRET=

# Optional: S3/Azure Blob for exports
# EXPORT_STORAGE_PATH=./storage/exports

# App
NODE_ENV=development
API_PORT=3000
FRONTEND_URL=http://localhost:5173
